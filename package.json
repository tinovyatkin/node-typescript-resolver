{
  "name": "node-typescript-resolver",
  "version": "0.7.2",
  "description": "Companion loader for Node.js's built-in TypeScript support that adds TypeScript-aware import resolution",
  "main": "./dist/require.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/require.js"
    },
    "./loader": {
      "types": "./dist/loader.d.ts",
      "import": "./dist/loader.js",
      "require": "./dist/loader.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test",
    "test:ci": "node --test --experimental-test-coverage --test-reporter spec --test-reporter-destination stdout --test-reporter node-test-github-reporter --test-reporter-destination stdout --test-reporter lcov --test-reporter-destination lcov.info --test-reporter junit --test-reporter-destination junit.xml",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "typescript",
    "resolver",
    "loader",
    "node",
    "import",
    "esm",
    "extensionless",
    "tsconfig",
    "paths"
  ],
  "author": "Konstantin Vyatkin <tino@vtkn.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tinovyatkin/node-typescript-resolver.git"
  },
  "bugs": {
    "url": "https://github.com/tinovyatkin/node-typescript-resolver/issues"
  },
  "homepage": "https://github.com/tinovyatkin/node-typescript-resolver#readme",
  "engines": {
    "node": ">=22.15.0"
  },
  "dependencies": {
    "oxc-resolver": ">=11.13.1 <11.14.0"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
    "@eslint/js": "9.39.1",
    "@eslint/markdown": "7.5.1",
    "@eslint/mcp": "0.2.0",
    "@homer0/prettier-plugin-jsdoc": "11.0.1",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "16.5.0",
    "lefthook": "2.0.8",
    "node-test-github-reporter": "1.3.1",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "type-fest": "5.3.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  }
}
