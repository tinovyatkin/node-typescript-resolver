{
  // Disable ESLint and Biome in favor of oxlint
  "eslint.enable": false,
  "biome.enabled": false,

  // Enable oxc extension (linter only, Prettier handles formatting)
  "oxc.enable": true,
  "oxc.configPath": ".oxlintrc.json",
  "oxc.fixKind": "safe_fix_or_suggestion",
  "oxc.typeAware": true,
  "oxc.formatter.enable": false,

  // Editor settings for TypeScript
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.oxc": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.oxc": "explicit"
    }
  }
}
